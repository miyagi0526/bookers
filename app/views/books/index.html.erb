<header>
  <h2 class="Books-title">Books</h2>
</header>

<main>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><span class="book-title"><%= book.title %></span></td>
        <td><span class="book-body"><%= book.body %></span></td>
        <td>
          <div class="flex">
            <span class="link"><%= link_to "Show", book_path(book.id) %></span>
            <span class="link"><%= link_to "Edit", edit_book_path(book.id) %></span>
            <span class="link"><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %></span>
          </div>
        </td>
      </tr>
    <% end %>
  </table>

  <div class="new-box">
    <h3 class="new-title">New book</h3>

    <div class="eroor-message">  
      <% if @book.errors.any? %>
        <div class="error-m1">
          <%= @book.errors.count %> errors prohibited this book being saved:
        </div>
        <div class="error-m2">
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <%= form_with model: @book, url: '/books', method: :post do |f| %>

      <h5>Title</h5>
      <%= f.text_field :title %>

      <h5>Body</h5>
      <%= f.text_area :body %>
      <div>
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
  </div>
</main>
